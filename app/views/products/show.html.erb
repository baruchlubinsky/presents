<section id='full_product'>
    <div id='product_images'>
        <%= image_tag @product.images.first.file_url, :id => 'main_product_image' %>
        <div id='sub_images'>
			<%= image_tag 'dot.jpg' %>
            <% @product.images.each_with_index do |i, index| %>
				<span class='image_num'>
                <%= link_to (index + 1).to_s, "javascript: set_product_image('#{i.file_url}');"%>
				</span>
				<%= image_tag 'dot.jpg' %>	
            <% end %>            
        </div>
    </div>
	<div class='hidden'>
		<% @product.images.each do |i| %>
			<%= image_tag i.file_url %>			
        <% end %>
	</div>
    <div id='product_details'>
		<h3 class='product_title'>
			<%= @product.name %>
		</h3>
        <h4>
            <%= simple_format @product.description %>
        </h4>
		

    </div>
 	<div id='product_bottom'>
		<h4 class='product_price'>
            <%= number_to_currency @product.price %>
        </h4>
        <h4 class='buy_now'>
            <%= link_to 'Add to cart', cart_add_item_path(:product_id => @product.id) %> &nbsp;&nbsp;
			<%= link_to image_tag('trolley.jpg'), cart_add_item_path(:product_id => @product.id)  %>
        </h4>
	</div>
</section>
<div id='logo_container'>
	<%= image_tag @shop.logo.file_url%>
</div>