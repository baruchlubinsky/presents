<h1>Update your personal details</h1>
<span class='message'><%= flash[:message] %></span>
<%= form_for (@user) do |f| %>
    <p>
	<%= f.label :first_name, 'First name' %></br>
	<%= f.text_field :first_name %>
	</p>
	<p>
	<%= f.label :surname, 'Surname' %></br>
    <%= f.text_field :surname %>
	</p>
	<p>
		<%= f.label :gender, 'Gender' %></br>
		<%= f.text_field :gender %>
	</p>
	<p>
		<%= f.label :birthdate, 'Birthdate' %></br>
		<%= f.date_select :birthdate, :start_year => 1900, :end_year => Time.now.year %>
	</p>
	<p>
		<%= f.label :hometown, 'Home town' %></br>
		<%= f.text_field :hometown %>
	</p>
	<p>
		<%= f.label :day_job, 'What do you do in the day?' %></br>
		<%= f.text_field :day_job %>
	</p>
	<p>
		<%= f.label :dream_job, 'What do you wish you were doing?' %></br>
		<%= f.text_field :dream_job %>
	</p>
	<p>
		<%= f.label :shoe_size, 'Shoe size' %></br>
		<%= f.text_field :shoe_size %>
	</p>
	<p>
		<%= f.label :tshirt_size, 'T-shirt size' %></br>
		<%= f.text_field :tshirt_size %>
	</p>
	<p>
		<%= f.label :waist_size, 'Dress/Pants size' %></br>
		<%= f.text_field :waist_size %>
	</p>
	<p>
		<%= f.label :dream_present, 'What is your dream present?' %></br>
		<%= f.text_field :dream_present %>
	</p>		
	<p>
	<%= f.submit 'Save' %>
	</p>
<% end %>