<section class='story_container'>
    <h2>
        <%= story.title %>
    </h2>
    <p class='story_date'>
        <%= story.created_at.to_date.to_formatted_s :long_ordinal %>
    </p>
    <div class='images'>
        <%= image_tag story.images[0].file_url(:story).to_s, :class => 'main_image' unless story.images.empty? %>
        <% if story.images.count > 1 %>
            <% story.images.drop(1).each do |image| %>
                <%= image_tag image.file_url(:story).to_s, :class => 'sub_image '%>
            <% end %>
        <% end %>
    </div>
    <div class='story'>
        <%= simple_format(story.content) %>
    </div>
    <p class='permalink'>
        <%= link_to 'Read full story', story_path(story) %> - <a name='comments' onclick='toggleComments("<%= story.id %>")' class='comments_link'>Comments (<%= story.comments.count %>)</a>
    </p>
    <div class='hidden' id="<%= story.id %>_comments">
        <h3>Comments</h3>
        <% story.comments.each do |comment| %>
            <span class='comment_author'>
                <% if comment.website.empty? %>
                    <%= comment.name %>
                <% else %>
                    <%= link_to comment.name, comment.website %>
                <% end %>
            </span>
            <span class='comment_time'>
                <%= comment.created_at.to_formatted_s :long_ordinal %>
            </span>
            <%= simple_format comment.content %>
        <% end %>
        <%= form_for([story, Comment.comment_for(@user)]) do |f| %>
            <p>
                <%= f.label :name, 'Name' %>
                <br />
                <%= f.text_field :name %>
            </p>
            <p>
                <%= f.label :email, 'Email' %>
                <br />
                <%= f.text_field :email %>
            </p>
            <p>
                <%= f.label :website, 'Website (optional)' %>
                <br />
                <%= f.text_field :website %>
            </p>
            <p>
                <%= f.label :content, 'Comment' %>
                <br />
                <%= f.text_area :content, :rows => 4 %>
            </p>
            <%= f.submit 'Submit' %>
        <% end %>
    </div>
</section>
