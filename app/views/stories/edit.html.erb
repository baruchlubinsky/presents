<%= link_to 'Admin menu', admin_path %>
<h1>
    Edit story
</h1>
<%= form_for @story, :multipart => true do |f| %>
    <p>
    <%= f.label :title, 'Post title' %>
    <%= f.text_field :title %>
    </p>
    <p>
    <%= f.label :content, 'Content' %>
    <%= f.text_area :content %>
    </p>
    <p>
        <div id='upload_container'>
            <%= f.fields_for 'blog_images[0]' do |attachments| %>
                <p>
                <%= attachments.file_field :file %>
                </p>
                <p>
                <%= attachments.label :remote_file_url, "or image url" %><br />
                <%= attachments.text_field :remote_file_url %>
                </p>
            <% end %>
        </div>
        <%= f.submit 'Submit changes' %>
        <div class='hidden' id='upload_template'>
        <%= f.fields_for 'blog_images[999]' do |attachments| %>
            <p>
            <%= attachments.file_field :file %>
            </p>
            <p>
            <%= attachments.label :remote_file_url, "or image url" %><br />
            <%= attachments.text_field :remote_file_url %>
            </p>
        <% end %>
        </div>
    </p>
<% end %>
<ul>
    <% @story.blog_images.each do |image| %>
        <li>
            <%= image_tag image.file_url(:thumbnail).to_s %>
            <%= link_to 'Delete', story_blog_image_path(@story, image), :method => :delete %>
        </li>
    <% end %>
</ul>
