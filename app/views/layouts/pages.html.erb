<!DOCTYPE html>
<html>
<head>
  <title>PresentsInThePost</title>

  <%= stylesheet_link_tag    "application", :media => "all" %> 
  <%= javascript_include_tag "application" %>
  <link href='http://fonts.googleapis.com/css?family=Quattrocento|Special+Elite' rel='stylesheet' type='text/css'>
  <%= csrf_meta_tags %>
  <%= yield :head %>
</head>
<body>
    <%= yield :overlay %>
    <div id='login'>
    
    </div>
<div id='column'>    
    <div id='header'>
        <div id='user'>
            <% if @user.nil? %>
                <%= link_to 'Login', login_path %>
            <% else %>
                Hello <%= link_to @user.name, edit_user_path(@user) %> | <%= link_to 'Logout', logout_path %>
            <% end %>
            
        </div>
        	<a href="/"><%= image_tag 'header.jpg', :id => 'logo' %></a>
        <div>
            <%= yield :prenav %>
        </div>
        <nav>
			<%= image_tag 'dot.jpg' %>
  			<%= link_to image_tag('Home.jpg'), home_path, :class => @tab == 'home' ? 'current' : 'regular' %> 
			<%= image_tag 'dot.jpg' %>
			<%= link_to image_tag('Get a Present.jpg'), get_a_present_path, :class => @tab == 'present' ? 'current' : 'regular' %> 
			<%= image_tag 'dot.jpg' %>
			<%= link_to image_tag('The Story.jpg'), the_story_path, :class => @tab == 'story' ? 'current' : 'regular' %> 
			<%= image_tag 'dot.jpg' %>
			<%= link_to image_tag('Today.jpg'), today_path, :class => @tab == 'today' ? 'current' : 'regular' %> 
			<%= image_tag 'dot.jpg' %>
			<%= link_to image_tag('Raj Loves.jpg'), raj_loves_path, :class => @tab == 'loves' ? 'current' : 'regular' %> 
			<%= image_tag 'dot.jpg' %>
			<%= link_to image_tag('Posted Presents.jpg'), posted_presents_path, :class => @tab == 'posted' ? 'current' : 'regular' %>
			<%= image_tag 'dot.jpg' %>
			<%= link_to image_tag('Shop.jpg'), shops_path, :class => @tab == 'shop' ? 'current' : 'regular' %> 
			<%= image_tag 'dot.jpg' %>
        </nav>
    </div>
    <div id='content'>
        <%= yield %>
    </div>
	<div id="footer">
	</div>
</div>	
</body>
</html>
